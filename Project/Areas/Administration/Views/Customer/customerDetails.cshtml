@model CustomerDetailsViewModel
    <div class="container d-flex justify-content-center mt-5">
        <div class="card w-75">
            <div class="card-header">
                Customer: @Model.CustomerName
            </div>
            <div class="card-body">
                <div class="card-text">
                    Count of Pending Repair Tasks&#58; @Model.CountOfPendingRepairTasks
                </div>
                <div class="card-text">
                    Count of Worked on Repair Tasks&#58; @Model.CountOfWorkedOnRepairTasks
                </div>
                <div class="card-text">
                    Count of Finished Repair Tasks&#58; @Model.CountOfFinishedRepairTasks
                </div>
                <div class="card-text">
                    <strong>Total Revenu&#58; @Model.TotalRevenue</strong>
                </div>
            </div>
        </div>
    </div>