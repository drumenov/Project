@model CreateTechnicianInputModel

<main>
    <div class="d-flex justify-content-center">
        <section class="jumbotron w-75 mt-5">
            <h3 class="text-center">Create a Technician</h3>
            <form method="post"
                  asp-action="@StringConstants.ActionNameCreateTechnician"
                  asp-controller="@StringConstants.AccountControllerName"
                  asp-area="@StringConstants.AreaNameAdministration">
                <div form-group>
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" value="@Model?.Name" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ConfirmPassword"></label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Level">Level of Expertise</label>
                    <select asp-items="@new SelectList(Enum.GetNames(typeof(TechnicianLevel)))" asp-for="@Model.Level" class="custom-select">
                        <option value="" selected disabled>Choose a Level of Expertise</option>
                    </select>
                </div>
                <div>
                    <span asp-validation-for="@Model.Level" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <div>
                        <a class="btn btn-info text-white" id="back">Go Back</a>
                    </div>
                    <div class="d-flex justify-content-between">
                        <input type="reset" class="btn btn-danger" value="Clear" />
                        <input type="submit" class="btn btn-primary mx-3" value="Create a Technician" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</main>