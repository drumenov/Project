@model CreateAdministratorInputModel

<main class="w-75">
    <section class="jumbotron mt-3">
        <h3 class="text-center">Create an Administrator</h3>
        <form class="mt-3" method="post" 
                asp-controller="@StringConstants.AccountControllerName" 
                asp-action="@StringConstants.ActionNameCreateAdministrator" 
                asp-area="@StringConstants.AreaNameAdministration">
            <div class="form-group">
                <label asp-for="@Model.Username"></label>
                <input asp-for="@Model.Username" class="form-control" value="@Model?.Username"/>
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-gorup">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" class="form-control"/>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mt-5 d-flex justify-content-end">
                <input type="submit" class="btn btn-primary" value="Create an Administrator" />
            </div>
        </form>
    </section>
</main>