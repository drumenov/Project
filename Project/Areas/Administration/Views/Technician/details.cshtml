@model TechnicianDetailsViewModel
@inject Microsoft.AspNetCore.Identity.UserManager<Project.Models.Entities.User> userManager

<div class="container d-flex justify-content-center">
    <div class="card mt-5">
        <div class="card-header">
            Technician&#39;s name&#58; <strong>@Model.Username</strong>
        </div>
        <div class="card-body">
            <div class="card-text">Technician&#39;s Expertise&#58;</div>
            @{
                var technician = await userManager.FindByNameAsync(Model.Username);
                var technicianLevel = userManager.GetRolesAsync(technician).GetAwaiter().GetResult()[0];
                <div class="card-text">
                    <strong>@technicianLevel</strong>
                </div>
            }
            <div class="card-text">
                Count of Finished Repair Tasks&#58;
            </div>
            <div class="card-text">
                <strong>@Model.CountOfFinishedRepairTasks</strong>
            </div>
            <div class="card-text">
                Count of Worked on Repair Tasks&#58;
            </div>
            <div class="card-text">
                <strong>@Model.CountOfWorkedOnRepairTasks</strong>
            </div>
        </div>
    </div>
</div>