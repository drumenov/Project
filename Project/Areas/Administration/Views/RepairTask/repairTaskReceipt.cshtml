@model RepairTaskReceiptViewModel

<div class="container d-flex justify-content-center">
    <div class="card mt-5">
        <div class="card-header">
            Receipt ID&#58; @Model.ReceiptId
        </div>
        <div class="card-body">
            <div class="card-text">
                <div>Customer&#58;</div> 
                <div>
                    <strong>@Model.CustomerName</strong>
                </div>
            </div>
            <div class="card-text">
                Technicians Having Worked on the Repair Task&#58;
            </div>
            @foreach(string technicianName in Model.NamesOfTechniciansHavingWorkedOnTheRepairTask) {
                <div class="card-text">
                    <strong>@technicianName</strong>
                </div>
            }
            <div class="dropdown-divider"></div>
            <div class="d-flex justify-content-end">
                <p class="card-text">
                    <strong>Total Revenue&#58; @Model.TotalRevenue</strong>
                </p>
            </div>
        </div>
    </div>
</div>