@{ 
    ViewBag.Title = "Welcome";
}
<section class="container mt-3">
    <div class="jumbotron">
        <h1 class="text-center">Welcome to our Sweatshop</h1>
        <h3 class="text-center mt-2">If you are an Administrator, <a asp-controller="@StringConstants.UserControllerName" asp-action="@StringConstants.ActionNameLogin" asp-route-userRole="@StringConstants.AdminUserRole">@StringConstants.ActionNameLogin here</a></h3>
        <h3 class="text-center mt-2">If you are a Customer, <a asp-controller="@StringConstants.UserControllerName" asp-action="@StringConstants.ActionNameLogin" asp-route-userRole="@StringConstants.CustomerUserRole">@StringConstants.ActionNameLogin here</a></h3>
        <h3 class="text-center mt-2">If you are a Technician, <a asp-controller="@StringConstants.UserControllerName" asp-action="@StringConstants.ActionNameLogin" asp-route-userRole="@StringConstants.TechnicianUserRole">@StringConstants.ActionNameLogin here</a></h3>
    </div>
</section>